<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:scrollbars="none"
        tools:context=".ViewTempatActivity">

        <View
            android:id="@+id/bg_putih"
            android:layout_width="match_parent"
            android:layout_height="542dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_putih"
            app:layout_constraintTop_toBottomOf="@+id/foto_pulau_angso"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/foto_pulau_angso"
            android:layout_width="361dp"
            android:layout_height="248dp"
            android:layout_margin="24dp"
            android:layout_marginStart="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/angso_duo"
            app:layout_constraintStart_toStartOf="@+id/bg_putih"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:id="@+id/pulau_angso_duo"
            android:layout_width="363dp"
            android:layout_height="29dp"
            android:layout_marginTop="40dp"
            android:text="Pulau Mahitam"
            android:textColor="@color/hitam"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="@+id/foto_pulau_angso"
            app:layout_constraintTop_toBottomOf="@+id/foto_pulau_angso"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lokasi"
            android:layout_width="360dp"
            android:layout_height="20dp"
            android:text="Lampung Tengah, Indonesia"
            android:textColor="@color/abu"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/pulau_angso_duo"
            app:layout_constraintTop_toBottomOf="@id/pulau_angso_duo" />

        <TextView
            android:id="@+id/fasilitas"
            android:layout_width="130dp"
            android:layout_height="22dp"
            android:layout_marginTop="32dp"
            android:text="Fasilitas/Akses"
            android:textColor="@color/hitam"
            android:textSize="15dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/lokasi"
            app:layout_constraintTop_toBottomOf="@+id/lokasi"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/R_ibadah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ruang Ibadah"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/fasilitas"
            app:layout_constraintTop_toBottomOf="@+id/fasilitas"
            tools:ignore="MissingConstraints"
            tools:layout_marginLeft="0dp" />

        <CheckBox
            android:id="@+id/R_makan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="Ruang Makan"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/R_ibadah"
            app:layout_constraintTop_toBottomOf="@+id/fasilitas"
            tools:ignore="MissingConstraints"
            tools:layout_marginLeft="0dp" />

        <CheckBox
            android:id="@+id/roda_dua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roda Dua"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/R_ibadah"
            app:layout_constraintTop_toBottomOf="@+id/R_ibadah"
            tools:ignore="MissingConstraints"
            tools:layout_marginLeft="0dp" />

        <CheckBox
            android:id="@+id/roda_empat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roda Empat"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/R_makan"
            app:layout_constraintTop_toBottomOf="@+id/R_makan"
            tools:ignore="MissingConstraints"
            tools:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="67dp"
            android:layout_height="20dp"
            android:layout_marginTop="32dp"
            android:text="Deskripsi"
            android:textColor="@color/hitam"
            android:textSize="15dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/fasilitas"
            app:layout_constraintTop_toBottomOf="@+id/roda_dua"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/deskripsi_selengkapnya"
            android:layout_width="72dp"
            android:layout_height="16dp"
            android:layout_marginStart="224dp"
            android:layout_marginTop="36dp"
            android:clickable="true"
            android:text="Selengkapnya"
            android:textColor="@color/hitam"
            android:textSize="11dp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/deskripsi"
            app:layout_constraintTop_toBottomOf="@+id/roda_dua"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ket_deskripsi"
            android:layout_width="362dp"
            android:layout_height="118dp"
            android:layout_marginTop="8dp"
            android:text="@string/deskripsi_angso_duo"
            android:textColor="@color/abu"
            android:textSize="15dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/deskripsi"
            app:layout_constraintTop_toBottomOf="@+id/deskripsi" />

        <TextView
            android:id="@+id/pratinjau"
            android:layout_width="79dp"
            android:layout_height="20dp"
            android:layout_marginTop="32dp"
            android:text="Pratinjau"
            android:textColor="@color/hitam"
            android:textSize="15dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/ket_deskripsi"
            app:layout_constraintTop_toBottomOf="@+id/ket_deskripsi" />

        <TextView
            android:id="@+id/pratinjau_selengkapnya"
            android:layout_width="69dp"
            android:layout_height="15dp"
            android:layout_marginStart="212dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:text="Selengkapnya"
            android:textColor="@color/hitam"
            android:textSize="11dp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/pratinjau"
            app:layout_constraintTop_toBottomOf="@+id/ket_deskripsi"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/fotoUser1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/foto_fikri"
            app:layout_constraintStart_toStartOf="@+id/pratinjau"
            app:layout_constraintTop_toBottomOf="@+id/pratinjau"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/namaUser1"
            android:layout_width="73dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:text="Fikri Aulia"
            android:textColor="@color/hitam"
            android:textSize="13dp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/fotoUser1"
            app:layout_constraintTop_toTopOf="@+id/fotoUser1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/pratinjauUser1"
            android:layout_width="288dp"
            android:layout_height="43dp"
            android:text="Mantap Moon, semoga dapat menjadi tempat wisata lebih baik untuk kedepannya^^"
            android:textColor="@color/abu"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/namaUser1"
            app:layout_constraintTop_toBottomOf="@+id/namaUser1"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
